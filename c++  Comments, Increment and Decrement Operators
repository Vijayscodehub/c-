// comments in c++
/*
this is a multiline comment
*/
//this is a single line comment

#include <iostream>
using namespace std;
int main()
{
    int a = 5;
    int b,c;
    
    b = a++ ; // here b = 5 and a = 6
    c = ++a; // here a is already 6 then the "++" operator will make a = 7 therefore c = 6+1 =7 
    cout<< b <<"\n";
    cout<< c <<"\n";
    
}
/*int main()
{
    int a = 5;
    int b,c;
    
    b = a--; here b = 5 and a = 4
    c = --a; here a is already 4 then the "--" operator will make a = 3 therefore c = 4-1 =3
    cout<< b <<"\n";
    cout<< c <<"\n";
    
}*/
